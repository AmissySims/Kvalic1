<Page x:Class="ResponseTeam.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ResponseTeam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="16" Margin="5"/>
            <TextBlock Text="Логин" Margin="5"/>
            <TextBox x:Name="LoginTb" Margin="5"/>
            <TextBlock Text="Пароль" Margin="5"/>
            <TextBox x:Name="PasswordTb" Margin="5"/>
            <Button x:Name="EnterBtn" Content="Войти" Margin="5" Click="EnterBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
